@using NewLife.Common;
@using NewLife.Cube
@using NewLife.Cube.WebMiddleware
@{
    var set = NewLife.Cube.CubeSetting.Current;
    var pageSetting = ViewBag.PageSetting as PageSetting ?? PageSetting.Global;

